<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="10dp"
        android:textColor="@color/color_live_chart_count"
        android:textSize="@dimen/common_text_size_x_large"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/room_sdk_shape_msg_right_blue">

        <com.uuabc.classroomlib.widget.EmojiLottieView
            android:id="@+id/lavRightEmoji"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="@dimen/max_gap_margin"
            app:lottie_autoPlay="true"
            app:lottie_fileName="gift.json"
            app:lottie_loop="true" />
    </LinearLayout>

</LinearLayout>