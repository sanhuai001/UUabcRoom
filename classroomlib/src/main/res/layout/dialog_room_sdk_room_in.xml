<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.005" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.38" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.62" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <ImageView
        app:layout_constraintTop_toTopOf="@id/line1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/ic_room_sdk_bg_room_in_tip"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/iv_bell"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_room_sdk_room_bell"
        app:layout_constraintDimensionRatio="W,97:105"
        app:layout_constraintLeft_toRightOf="@id/line2"
        app:layout_constraintRight_toLeftOf="@id/line3" />

    <ImageView
        android:layout_width="33dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/line10"
        android:background="@drawable/ic_room_sdk_start1"
        app:layout_constraintDimensionRatio="H,27:27" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/line1"
        app:layout_constraintRight_toLeftOf="@id/line2"
        android:background="@drawable/ic_room_sdk_start2"
        app:layout_constraintDimensionRatio="H,16:17" />

    <ImageView
        android:id="@+id/iv_star3"
        android:layout_width="16dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/line5"
        app:layout_constraintRight_toLeftOf="@id/line3"
        android:background="@drawable/ic_room_sdk_start3"
        app:layout_constraintDimensionRatio="H,16:17" />

    <ImageView
        android:layout_width="14dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/line5"
        app:layout_constraintRight_toLeftOf="@id/iv_star3"
        android:background="@drawable/ic_room_sdk_start4"
        app:layout_constraintDimensionRatio="H,16:17" />

    <TextView
        android:id="@+id/tv_my_name"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_bell"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line6"
        android:textSize="@dimen/common_text_size_xxx_large"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="hi ass" />

    <TextView
        android:id="@+id/tv_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line5"
        android:layout_marginEnd="25dp"
        android:text="10s"
        android:textSize="@dimen/common_text_size_xxx_large"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_icons"
        app:layout_constraintLeft_toLeftOf="@id/line7"
        app:layout_constraintRight_toRightOf="@id/line8"
        app:layout_constraintTop_toBottomOf="@id/line6"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50" />

        <ImageView
            android:background="@drawable/ic_room_sdk_class_room_blue_diamond"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/line9"
            app:layout_constraintDimensionRatio="H,94:76"
            android:layout_marginEnd="16dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageView
            android:background="@drawable/ic_room_sdk_coin"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/line9"
            app:layout_constraintDimensionRatio="H,76:76"
            android:layout_marginStart="16dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_tips"
        app:layout_constraintTop_toBottomOf="@id/cl_icons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_middle"
        android:text="@string/dialog_room_tips_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_words"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_middle"
        app:layout_constraintTop_toBottomOf="@id/tv_tips"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>