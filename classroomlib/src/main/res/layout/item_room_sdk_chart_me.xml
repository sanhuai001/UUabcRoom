<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:minHeight="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:textSize="@dimen/common_text_size_x_large"
        android:layout_marginEnd="10dp"
        android:layout_gravity="right"
        android:textColor="@color/color_live_chart_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_msg_right"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="@dimen/common_text_size_large"
        android:layout_marginLeft="@dimen/mid_gap_margin"
        android:layout_marginRight="@dimen/mid_gap_margin"
        android:background="@drawable/room_sdk_shape_msg_right"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/min_gap_margin"
        android:paddingBottom="@dimen/min_gap_margin"
        android:paddingEnd="@dimen/max_gap_margin"
        android:paddingStart="@dimen/max_gap_margin"
        android:textColor="@color/white"
        tools:ignore="RtlHardcoded" />
</LinearLayout>